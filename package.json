        "@nestjs/common": "^10.0.3",
        "@nestjs/config": "^3.0.0",
        "@nestjs/core": "^10.0.3",
        "@nestjs/jwt": "^10.1.0",
        "@nestjs/mapped-types": "*",
        "@nestjs/microservices": "^10.0.3",
        "@nestjs/mongoose": "^10.0.0",
        "@nestjs/passport": "^10.0.0",
        "@nestjs/platform-express": "^10.0.3",
        "@nestjs/schedule": "^3.0.3",
        "@nestjs/swagger": "^7.1.6",
        "@nestjs/terminus": "^10.0.1",
        "@nestjs/throttler": "^4.1.0",
        "amqp-connection-manager": "^4.1.13",
        "amqplib": "^0.10.3",
        "axios": "^1.5.1",
        "bcrypt": "^5.1.0",
        "cache-manager": "^5.2.3",
        "cache-manager-redis-yet": "^4.1.2",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.0",
        "cloudinary": "^1.37.3",
        "compression": "^1.7.4",
        "convert-time-string": "^0.0.1",
        "deep-diff": "^1.0.2",
        "discord.js": "^14.11.0",
        "express": "^4.18.2",
        "google-auth-library": "^9.1.0",
        "handlebars": "^4.7.7",
        "helmet": "^7.0.0",
        "ioredis": "^5.3.2",
        "jsonwebtoken": "^9.0.0",
        "mongoose": "^7.3.3",
        "mongoose-autopopulate": "^1.0.1",
        "morgan": "^1.10.0",
        "nestjs-throttler-storage-redis": "^0.3.3",
