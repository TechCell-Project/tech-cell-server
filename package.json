{
  "name": "tech-cell-web-server",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "engines": {
    "node": ">=18.x <=20.x"
  },
  "scripts": {
    "build": "nest build",
    "build:all": "node ./scripts/build-all-service.js",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node ./scripts/start-production.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/back-end/test/jest-e2e.json",
    "up:core": "docker compose -f docker-compose.core.yml up -d",
    "down:core": "docker compose -f docker-compose.core.yml down",
    "restart:core": "yarn down:core && yarn up:core --build",
    "up": "docker compose -f docker-compose.yml up -d",
    "up:dev": "docker compose -f docker-compose.dev.yml up -d",
    "down": "docker compose -f docker-compose.yml down",
    "restart": "yarn down && yarn up --build",
    "deploy:api": "yarn install && yarn start:prod api",
    "deploy:auth": "yarn install && yarn start:prod auth",
    "deploy:sample": "yarn install && yarn start:prod sample",
    "deploy:products": "yarn install && yarn start:prod products"
  },
  "dependencies": {
    "@nestjs-modules/mailer": "^1.8.1",
    "@nestjs/cache-manager": "^2.0.0",
    "@nestjs/common": "^9.0.0",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^9.0.0",
    "@nestjs/jwt": "^10.0.3",
    "@nestjs/microservices": "^9.4.2",
    "@nestjs/mongoose": "^9.2.2",
    "@nestjs/passport": "^9.0.3",
    "@nestjs/platform-express": "^9.0.0",
    "@nestjs/swagger": "^6.3.0",
    "@nestjs/throttler": "^4.1.0",
    "amqp-connection-manager": "^4.1.13",
    "amqplib": "^0.10.3",
    "bcrypt": "^5.1.0",
    "cache-manager": "^5.2.3",
    "cache-manager-redis-yet": "^4.1.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "express": "^4.18.2",
    "handlebars": "^4.7.7",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.2.2",
    "nestjs-throttler-storage-redis": "^0.3.3",
    "nodemailer": "^6.9.3",
    "otp-generator": "^4.0.1",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.2.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.0.0",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "29.5.1",
    "@types/node": "18.16.12",
    "@types/nodemailer": "^6.4.8",
    "@types/otp-generator": "^4.0.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "29.5.0",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "29.1.0",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@app/common(|/.*)$": "<rootDir>/libs/common/src/$1",
      "^~/constants(|/.*)$": "<rootDir>/constants/$1",
      "^~/apps/api(|/.*)$": "<rootDir>/apps/api/src/$1",
      "^~/apps/auth(|/.*)$": "<rootDir>/apps/auth/src/$1",
      "^~/apps/mail(|/.*)$": "<rootDir>/apps/mail/src/$1",
      "^~/apps/products(|/.*)$": "<rootDir>/apps/products/src/$1",
      "^~/apps/sample(|/.*)$": "<rootDir>/apps/sample/src/$1"
    }
  }
}