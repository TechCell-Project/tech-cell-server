{
    "name": "tech-cell-server",
    "version": "0.0.1",
    "description": "",
    "author": "TechCell Teams <teams@techcell.cloud>",
    "private": true,
    "license": "MIT",
    "engines": {
        "node": "18.x"
    },
    "scripts": {
        "build": "nest build",
        "build:all": "node ./scripts/build-all-service.js",
        "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node ./scripts/start-production.js",
        "lint": "eslint \"{src,apps,libs,test,types,constants}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./apps/back-end/test/jest-e2e.json",
        "up:core": "docker compose -f docker-compose.core.yml up -d",
        "up:core:build": "docker compose -f docker-compose.core.yml up -d --build",
        "down:core": "docker compose -f docker-compose.core.yml down",
        "up:dev": "docker compose -f docker-compose.dev.yml up -d",
        "up:dev:build": "docker compose -f docker-compose.dev.yml up -d --build",
        "down:dev": "docker compose -f docker-compose.dev.yml down",
        "up:deploy": "docker compose -f docker-compose.prod.yml up -d",
        "up:deploy:build": "docker compose -f docker-compose.prod.yml up -d --build",
        "down:deploy": "docker compose -f docker-compose.prod.yml down",
        "compodoc": "npx @compodoc/compodoc -p tsconfig.json -s",
        "get-logs": "docker cp tech-cell-server-utility-1:/usr/src/app/logs .",
        "tc-cli": "node ./scripts/deploy-docker.js"
    },
    "dependencies": {
        "@discord-nestjs/core": "^5.3.8",
